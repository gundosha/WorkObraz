        const express = require('express')
        const nodemailer = require('nodemailer')
        const app = express()
        const port = 3000

        app.use(express.static('obraz'));
        app.use('/static', express.static('obraz'));



        

        function sendEmail(){
            

            return new Promise((resolve, reject) =>{

                var transporter = nodemailer.createTransport({
                    service:'gmail',
                    auth:{
                        user:'zamilovivan2016@gmail.com',
                        pass:'tfynoanelgyysxkl'
                    }
                })

                const mail_configs ={
                    from:'zamilovivan2016@gmail.com',
                    to:'zamilovivan2016@gmail.com',
                    subject: 'pizda',
                    text: 'd'
                }
                transporter.sendMail(mail_configs, function(error, info){
                    if(error){
                        console.log(error)
                        return reject({message: `an error`})
                    }
                    return resolve({message:`email send`})
                })
            })
        }

        app.get('/email',(res, req, next) => {
            sendEmail()
        })



        app.listen(port, ()=> {
            console.log(`nodemailer http:/localhost:${port}`)
        })